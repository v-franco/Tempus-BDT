<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/image_list_hm_jobs"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="14dp"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/text_list_hm_jobs_title"
        app:srcCompat="@drawable/hm_vector_petition" />

    <TextView
        android:id="@+id/text_list_hm_jobs_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"
        android:text="Nueva peticion"
        android:textColor="#334846"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/image_list_hm_jobs"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_list_hm_jobs_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jardineria"
        android:textColor="#4F6260"
        android:textSize="8sp"
        app:layout_constraintStart_toStartOf="@+id/text_list_hm_jobs_title"
        app:layout_constraintTop_toBottomOf="@+id/text_list_hm_jobs_title" />
</androidx.constraintlayout.widget.ConstraintLayout>