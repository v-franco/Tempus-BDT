<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/single_job_card"
    android:layout_margin="12dp"
    card_view:cardBackgroundColor="#C7DEEB"
    card_view:cardCornerRadius="20dp"
    card_view:cardElevation="5dp"
    card_view:contentPadding="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <ImageView
            android:id="@+id/single_job_image"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="140dp"
            android:layout_marginStart="110dp"
            android:layout_marginEnd="16dp"
            />

        <TextView
            android:id="@+id/single_job_desc_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="22dp"
            android:layout_alignParentTop="true"
            android:fontFamily="@font/arial_rounded_mt"
            android:text="DescripciÃ³n del trabajo"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/single_job_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/single_job_desc_title"
            android:layout_marginStart="22dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/arial_rounded_mt"
            android:text="Descriptive text"
            android:textColor="@color/black"
            android:textSize="14sp" />


    </RelativeLayout>

</androidx.cardview.widget.CardView>